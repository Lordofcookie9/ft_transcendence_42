{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./compiled"
  },
  "include": [
    "main.ts",
    "utility.ts",
    "router.ts",
    "pong/**/*.ts",
    "users/**/*.ts",
    "pages/**/*.ts"
  ]
}
